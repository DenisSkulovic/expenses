{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build", // Specifies the output directory for compiled files
    "rootDir": "./src", // Specifies the root directory of input files
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true // Generates corresponding '.map' file.
  },
  "include": [
    "src/**/*"
  ], // Include all files in the src directory
  "exclude": [
    "node_modules",
    "build"
  ] // Exclude the node_modules and build directories
}